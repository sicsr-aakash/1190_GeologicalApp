<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.geologicalapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/applogo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.geologicalapp.HomePageActivity"
            android:label="@string/app_name" >
            
        </activity>
        <activity
            android:name="com.example.geologicalapp.IntroductionActivity"
            android:label="@string/title_activity_introduction" >
        </activity>
        <activity
            android:name="com.example.geologicalapp.RockTypeActivity"
            android:label="@string/title_activity_rock_type" >
        </activity>
        <activity
            android:name="com.example.geologicalapp.RockChangeActivity"
            android:label="@string/title_activity_rock_change" >
        </activity>
        <activity
            android:name="com.example.geologicalapp.RockCycleActivity"
            android:label="@string/title_activity_rock_cycle" >
        </activity>
        <activity
            android:name="com.example.geologicalapp.QuizActivity"
            android:label="@string/title_activity_quiz" >
        </activity>
        <activity
            android:name="com.example.geologicalapp.SedimentaryTypeActivity"
            android:label="@string/title_activity_sedimentary_type" >
        </activity>
        <activity
            android:name="com.example.geologicalapp.MetamorphicTypeActivity"
            android:label="@string/title_activity_metamorphic_type" >
        </activity>
        <activity
            android:name="com.example.geologicalapp.IgneousTypeActivity"
            android:label="" >
        </activity>
        <activity
            android:name="com.example.geologicalapp.HelpActivity"
            android:label="@string/title_activity_help" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.example.geologicalapp.Demo"
            android:label="@string/title_activity_demo" >
        </activity>
        <activity
            android:name="com.example.geologicalapp.SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>