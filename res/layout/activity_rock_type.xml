<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rock_types"
    tools:context=".RockTypeActivity" >

    <ImageView
        android:id="@+id/btn_igneous"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:background="@android:color/transparent"
        
       
       
       />

<ImageView
    android:id="@+id/btn_metamorphic"
    android:layout_width="210dp"
    android:layout_height="105dp"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/btn_igneous"
    android:background="@android:color/transparent" />

<ImageView
    android:id="@+id/btn_sedimentary"
    android:layout_width="205dp"
    android:layout_height="105dp"
    android:layout_below="@+id/btn_metamorphic"
    android:layout_centerHorizontal="true"
    android:background="@android:color/transparent" />


    
</RelativeLayout>